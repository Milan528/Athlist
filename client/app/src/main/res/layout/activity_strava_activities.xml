<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StravaActivitiesActivity">


        <LinearLayout
            android:id="@+id/layoutCalendar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
         <include layout="@layout/calendar_layout"/>


        </LinearLayout>

    <TextView
        android:id="@+id/strava_activities_page_filters_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:text="@string/filters"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/strava_activities_page_upDownArrow_imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutCalendar" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/strava_activities_page_upDownArrow_imageView"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:padding="5sp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_keyboard_arrow_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutCalendar" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/strava_activities_page_charts_recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/strava_activities_page_upDownArrow_imageView"/>






</androidx.constraintlayout.widget.ConstraintLayout>